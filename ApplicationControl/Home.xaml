<UserControl x:Class="ApplicationControl.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Welcome to"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="#23294E"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Application Control"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,10,0,0"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Manage which apps can run on your system"
                       FontSize="14"
                       Foreground="Gray"
                       Margin="0,10,0,0"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
