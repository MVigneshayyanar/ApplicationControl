<Window x:Class="ApplicationControl.AppMetadataInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="App Metadata"
        Height="330" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Product Name -->
        <TextBlock Text="Product Name:" 
                   Grid.Row="0" 
                   Margin="0,0,0,5" 
                   Foreground="#4B49AC" 
                   FontWeight="Bold"/>
        <TextBox x:Name="ProductNameBox" 
                 Grid.Row="1" 
                 Margin="0,0,0,10"/>

        <!-- Vendor Name -->
        <TextBlock Text="Vendor Name:" 
                   Grid.Row="2" 
                   Margin="0,0,0,5" 
                   Foreground="#4B49AC" 
                   FontWeight="Bold"/>
        <TextBox x:Name="VendorNameBox" 
                 Grid.Row="3" 
                 Margin="0,0,0,10"/>

        <!-- File Hash -->
        <TextBlock Text="File Hash:" 
                   Grid.Row="4" 
                   Margin="0,0,0,5" 
                   Foreground="#4B49AC" 
                   FontWeight="Bold"/>
        <TextBox x:Name="FileHashBox" 
                 Grid.Row="5" 
                 Margin="0,0,0,10"/>

        <!-- Executable Name -->
        <TextBlock Text="Executable Name (.exe):" 
                   Grid.Row="6" 
                   Margin="0,0,0,5" 
                   Foreground="#4B49AC" 
                   FontWeight="Bold"/>
        <TextBox x:Name="ExeNameBox" 
                 Grid.Row="7" 
                 Margin="0,0,0,10"/>

        <!-- Save Button -->
        <Button Content="Save"
                Width="90"
                Height="32"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#4B49AC"
                Foreground="White"
                FontWeight="Bold"
                Margin="0,47,0,0"
                Click="Save_Click"
                Grid.Row="7"/>
    </Grid>
</Window>
